% Title page
\defbeamertemplate*{title page}{STR}[1][]
{ 
   \vskip80pt%
    \begin{beamercolorbox}[wd=12cm,leftskip=3cm,sep=8pt,#1]{title page header}
      \usebeamerfont{title}\inserttitle\par%
    \end{beamercolorbox}%
    \vskip110pt%
    \begin{beamercolorbox}[wd=12cm,leftskip=8cm,#1]{author}
      \usebeamerfont{author}\insertauthor%
    \end{beamercolorbox}
     \vskip0.2cm%
    \begin{beamercolorbox}[wd=12cm,leftskip=8cm,#1]{date}
      \usebeamerfont{author}\insertdate%
    \end{beamercolorbox}
  \vfill
}

% Items
\setbeamertemplate{items}[square]
\setbeamertemplate{sections/subsections in toc}[square]

% Frame title
\defbeamertemplate*{frametitle}{STR}[1][]
{
\vskip5pt%
  \begin{beamercolorbox}[wd=\paperwidth]{frametitle} 
  \begin{tikzpicture}
  %% \useasboundingbox[fill=red2](0,0) rectangle(\the\paperwidth,2.03);
  \fill[red2] (0,0) rectangle(\the\paperwidth,0.05);

  %% \fill[blue!50!cyan!80] (3.05,0) rectangle(\the\paperwidth,1.2);
   \ifx\insertframesubtitle\@empty%
      {\node[anchor=west, white,font=\large] at (0.2,0.61){\insertframetitle};}
      \else%
      {\node[anchor= west, white,font=\large] at (0.2,0.91){\insertframetitle};%
       \node[anchor= west, white,font=\small] at (0.2,0.41){\insertframesubtitle};}%
      \fi
  \end{tikzpicture}
  \end{beamercolorbox}
}

